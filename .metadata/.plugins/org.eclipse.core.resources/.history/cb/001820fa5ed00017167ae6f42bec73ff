import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.HashMap;

import javax.swing.ImageIcon;
import javax.swing.JButton;

public class ActionListenerManager implements ActionListener
{
	public static int num = 0;
	
	
	
	public void actionPerformed(ActionEvent e) 
	{
		Card.GetInstance().card = (JButton) e.getSource();
		
		if(num == 0)
		{
			Card.GetInstance().card.setIcon(new ImageIcon(Card.GetInstance().path));
			num = 1;
		}
		else if(num == 1)
		{
			Card.GetInstance().card.setIcon(new ImageIcon(Card.GetInstance().));
			Card.GetInstance().card.setEnabled(false);
		}
	}
}
